<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPverify">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:orientation="horizontal"
           android:background="@drawable/border">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               android:orientation="horizontal"
               android:background="@drawable/border">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="38dp"
                   android:layout_marginLeft="15dp"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="VERIFY DETAILS"
                       android:textStyle="bold"
                       android:textColor="#000000"
                       android:textSize="22sp" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:text="OTP is sent to registered number"
                       android:textColor="#000000"
                       android:textSize="12sp"/>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="120dp"
                   android:layout_gravity="right"
                   android:layout_marginTop="3dp">
                   <ImageView
                       android:layout_width="100dp"
                       android:layout_height="110dp"
                       android:layout_gravity="right"
                       android:layout_marginLeft="50dp"
                       android:layout_marginTop="3dp"
                       android:src="@drawable/account_security_banner_thumb1"/>
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="250dp"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="70dp"
           android:layout_marginLeft="60dp"
           android:gravity="center"
           android:background="@drawable/boxborder">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="OTP Verification"
               android:textSize="23sp"
               android:textColor="#7d2c2c"/>

           <EditText
               android:id="@+id/verificationcode"
               android:layout_width="140dp"
               android:layout_height="35dp"
               android:layout_gravity="center"
               android:layout_marginTop="15dp"
               android:background="@drawable/border"
               android:drawablePadding="8dp"
               android:gravity="center"
               android:hint="OTP"
               android:inputType="numberPassword"
               android:textSize="18sp" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:orientation="vertical">
               <ProgressBar
                   android:id="@+id/progressbar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:visibility="gone"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"/>

               <Button
                   android:id="@+id/verify_otp"
                   android:visibility="gone"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:background="@drawable/border"
                   android:layout_gravity="center"
                   android:text="verify" />
           </LinearLayout>

       </LinearLayout>
   </LinearLayout>
</LinearLayout>